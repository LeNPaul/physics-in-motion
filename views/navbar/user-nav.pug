header
  #navbarHeader.collapse.bg-dark
    .container
      .row
        .col-sm-8.col-md-7.py-4
          h6.text-white
            a.text-white(href='/') Dashboard
          h6.text-white
            a.text-white(href='#') Courses
        .col-sm-4.offset-md-1.py-4
          p.text-muted
            | Logged in as #{user.username}
          h6.text-white
            a.text-white(href='logout')
              i.fa.fa-sign-out(aria-hidden='true')
              |  Logout
  .navbar.navbar-dark.bg-dark.box-shadow
    .container.d-flex.justify-content-between
      a.navbar-brand(href='/')
        i.fa.fa-rocket(aria-hidden='true')
