          ul.nav.nav-pills.flex-column
            li.nav-item
              a.nav-link(href='#') Nav item again
            li.nav-item
              a.nav-link(href='#') One more nav
            li.nav-item
              a.nav-link(href='#') Another nav item
        main.col-sm-9.offset-sm-3.col-md-10.offset-md-2.pt-3
          h1 Content
          section.row.text-center.placeholders
            nav.navbar.navbar-default
              .container
                .navbar-header
                  a.navbar-brand(href='/') Angular Routing Example
                ul.nav.navbar-nav.navbar-right
                  li
                    a(href='#')
                      i.fa.fa-home
                      |  Home
                  li
                    a(href='#!about')
                      i.fa.fa-shield
                      |  About
                  li
                    a(href='#!contact')
                      i.fa.fa-comment
                      |  Contact


          // ANGULAR DYNAMIC CONTENT
          div.ng-view
