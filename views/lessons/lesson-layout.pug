doctype html
html(lang='en',ng-app='lessonApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title #{ title } | Physics in Motion
    //- Bootstrap core CSS
    link(href='/assets/libs/bootstrap/bootstrap.min.css', rel='stylesheet')
    //- Custom styles for this template
    link(href='/assets/css/lessons/shop-item.css', rel='stylesheet')
    //- Google Analytics
    include ../google-analytics.pug     
  body(ng-controller='mainController')
    if (!user)
      include ../navbar/default-nav.pug
    if (user)
      include ../navbar/user-nav.pug
    //- Page Content
    block content
    //- Footer
    .container
      include ../footer/home-footer.pug       
    //-
      Bootstrap core JavaScript
      ==================================================
    //- Placed at the end of the document so the pages load faster
    script(src='/assets/libs/jquery/jquery.min.js')
    script(src='/assets/libs/bootstrap/bootstrap.bundle.min.js')
    //- AngularJS
    script(src='/assets/libs/angular/angular.min.js')
    script(src='/assets/libs/angular-route/angular-route.min.js')
    //- MathJax
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.5/MathJax.js?config=TeX-MML-AM_CHTML')
    //- Font Awesome
    script(src='/assets/libs/font-awesome/fontawesome-all.min.js')
    //- Chart.js
    script(src='/assets/libs/chart.js/Chart.bundle.js')
    //- Math custom module
    script(src='/assets/js/math.js')
    //- Helper functions for creating charts for lesson modules
    script(src='/assets/js/chart.js')
    //- ANGULAR CUSTOM
    script(src='/assets/js/lessonApp.js')
