doctype html
html(lang='en',ng-app='scotchApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title #{ title } | Physics in Motion
    //- Bootstrap core CSS
    link(href='assets/libs/bootstrap/bootstrap.min.css', rel='stylesheet')
    //- Custom styles for this template
    link(href='assets/css/lessons/shop-item.css', rel='stylesheet')
    //- Set username as metadata if logged in
    if (user)
      meta(name='username', content=user.username)
    //- Google Analytics
    include ../google-analytics.pug     
  body(ng-controller='mainController')
    if (!user)
      include ../navbar/default-nav.pug
    if (user)
      include ../navbar/user-nav.pug
    //- Page Content
    .container
      .row
        .col-lg-3
          h5.my-4 
            a(href=course_url) #{ course }  
            i.fa.fa-arrow-right(aria-hidden='true')
            |  #{ title }  
          .list-group
            block content
        //- /.col-lg-3
        .col-lg-9
          .card.mt-4
            .card-body
              p.card-text
                //- ANGULAR DYNAMIC CONTENT
                div.ng-view
          if (user)
            .card.mt-4
              .card-body
                p.card-text
                  .container
                    .row
                      .col-sm-2
                      .col-sm-8 
                        span#lessonStatus.badge.badge-secondary
                        hr
                        .btn-group(role='group', aria-label='Basic example')
                          button.btn.btn-secondary(type='button', onclick='updateLessonStatus(true)') Done
                          button.btn.btn-secondary(type='button', onclick='updateLessonStatus(false)') Unmark
                        hr
                        form
                          .form-group
                            label(for='lessonNotes') Notes
                            textarea#lessonNotes.form-control(rows='3')
                          button.btn.btn-secondary(type='button', onclick='updateNotes()') Save
          //- /.card
          //- .card.card-outline-secondary.my-4
